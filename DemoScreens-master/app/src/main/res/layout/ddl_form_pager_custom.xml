<?xml version="1.0" encoding="utf-8"?>
<com.liferay.myapplication.viewsets.DDLFormPagerCustom
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fillViewport="true"
	>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		>

		<com.liferay.myapplication.customviews.NoScrollViewPager
			android:id="@+id/liferay_pager"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:padding="10dp"
			/>

		<ProgressBar
			android:id="@+id/ddlform_loading_screen_progress_bar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:visibility="gone"
			/>

		<ProgressBar
			android:id="@+id/ddlform_progress_bar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:visibility="gone"
			/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			>

			<Button
				android:id="@+id/liferay_form_back"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginEnd="5dp"
				android:layout_weight="1"
				android:text="@string/back"
				android:visibility="visible"
				/>

			<Button
				android:id="@+id/liferay_form_submit"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginStart="5dp"
				android:layout_weight="1"
				android:text="@string/next"
				android:visibility="visible"
				/>

		</LinearLayout>

	</LinearLayout>

</com.liferay.myapplication.viewsets.DDLFormPagerCustom>